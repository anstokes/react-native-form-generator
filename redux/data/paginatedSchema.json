{
	"initialScreen": "account",
	"screens": {
		"account": {
			"title": "Create Account",
			"description": "Paginated form example. After the account is created, the user is sent to add payment information.",
			"navigateOnSubmit": {
					"function": {
						"args": "data",
						"body": "if (data.account.create_profile) {return 'personal_info';} return {screen: 'end', routeParams: {redirect: {finish: 'home'}, title: 'Custom Title', description: 'Redirected from account screen.', actions: ['finish', 'fillProfile']}};"
					}
			},
			"actions": {
				"cancel": {
					"type": "action",
					"action": "cancel",
					"label": "Cancel",
					"navigateTo": "home",
					"props": {
						"mode": "contained"
					}
				},
				"next": {
					"type": "action",
					"action": "next",
					"label": "Next",
					"props": {
						"mode": "contained"
					}
				}
			},
			"properties": {
				"fullName": {
					"type": "string",
					"value": "",
					"label": "Full Name",
					"props": {
						"mode": "outlined",
						"dense": true
					},
					"validation": [
						[
							"string"
						],
						[
							"required",
							"Name is required"
						]
					]
				},
				"email": {
					"type": "string",
					"label": "Email",
					"props": {
						"mode": "outlined",
						"dense": true
					},
					"validation": [
						[
							"string"
						],
						[
							"email",
							"Please enter a valid email"
						],
						[
							"required",
							"Email is required"
						]
					]
				},
				"password": {
					"type": "string",
					"value": "",
					"label": "Password",
					"props": {
						"mode": "outlined",
						"dense": true,
						"secureTextEntry": true
					},
					"validation": [
						[
							"string"
						],
						[
							"required",
							"Please enter a password with at least 6 characters"
						],
						[
							"min",
							6
						]
					]
				},
				"create_profile": {
					"type": "checkbox",
					"values": false,
					"label": "Create profile",
					"props": {
						"mode": "outlined",
						"dense": true
					},
					"validation": [
						[
							"boolean"
						]
					]
				}
			}
		},
		"personal_info": {
			"title": "Personal Information",
			"description": "Paginated form example. This form is shown only if the account specified to create a profile, or user clicked to fill details after they created their account.",
			"navigateOnSubmit": {
					"function": {
						"args": "data",
						"body": "if (data.personal_info.previous_work) {return 'work_history'}; if (data.personal_info.country === 'UK') {return 'payment_information'} return {screen: 'end', routeParams: {redirect: {finish: 'home'}, title: 'Custom Title', description: 'Redirected from personal_details screen.', actions: ['finish']}};"
					}
			},
			"actions": {
				"back": {
					"type": "action",
					"action": "back",
					"label": "Back",
					"props": {
						"mode": "contained"
					}
				},
				"submit": {
					"type": "submit",
					"action": "updateProfile",
					"label": "Update",
					"props": {
						"mode": "contained"
					}
				}
			},
			"properties": {
				"country": {
					"type": "string",
					"value": "",
					"label": "Country",
					"props": {
						"mode": "outlined",
						"dense": true
					},
					"validation": [
						[
							"string"
						],
						[
							"required",
							"Country is required"
						]
					]
				},
				"previous_work": {
					"type": "checkbox",
					"value": false,
					"label": "Previous Work",
					"props": {
						"mode": "outlined",
						"dense": true
					},
					"validation": [
						[
							"boolean"
						]
					]
				}
			}
		},
		"work_history": {
			"title": "Work History",
			"description": "Paginated form example. This form is shown only if the personal details has specified that they have worked before.",
			"navigateOnSubmit": {
				"function": {
					"args": "data",
					"body": "if (data.personal_info.country == 'UK') {return 'payment_information'}; return {screen: 'end', routeParams: {redirect: {finish: 'home'}, title: 'Custom Title', description: 'Redirected from work_history screen.', actions: ['finish']}};"
				}
			},
			"actions": {
				"back": {
					"type": "action",
					"action": "back",
					"label": "Back",
					"props": {
						"mode": "contained"
					}
				},
				"submit": {
					"type": "submit",
					"action": "updateWorkHistory",
					"label": "Update",
					"props": {
						"mode": "contained"
					}
				}
			},
			"properties": {
				"job_title": {
					"type": "string",
					"value": "",
					"label": "Job Title",
					"props": {
						"mode": "outlined",
						"dense": true
					},
					"validation": [
						[
							"string"
						],
						[
							"required",
							"Please enter a job title"
						]
					]
				}
			}
		},
		"payment_information": {
			"title": "Payment Information",
			"description": "Paginated form example. This form is shown only if create profile has been selected during account creation and the user specified they live in the UK.",
			"navigateOnSubmit": {
				"function": {
					"args" : "data",
					"body" :"return {screen: 'end', routeParams: {redirect: {finish: 'home'}, title: 'Custom Title', description: 'Redirected from payment_info screen.', actions: ['finish']}};"
				}
			},
			"actions": {
				"back": {
					"type": "action",
					"action": "back",
					"label": "Back",
					"props": {
						"mode": "contained"
					}
				},
				"submit": {
					"type": "submit",
					"action": "updatePaymentInfo",
					"label": "Save",
					"props": {
						"mode": "contained"
					}
				}
			},
			"properties": {
				"credit_card": {
					"type": "string",
					"label": "Credit Card",
					"props": {
						"mode": "outlined",
						"dense": true
					},
					"validation": [
						[
							"string"
						],
						[
							"matches",
							{
								"regex": {
									"value": "[0-9]",
									"flag": ""
								}
							},
							"Only number characters allowed"
						],
						[
							"max",
							14,
							"14 Characters limit"
						]
					]
				},
				"billing_address": {
					"type": "string",
					"label": "Billing Address",
					"props": {
						"mode": "outlined",
						"dense": true
					},
					"validation": [
						[
							"string"
						],
						[
							"when",
							"credit_card",
							{
								"function": {
									"args": [
										"value",
										"schema"
									],
									"body": "return value ? schema.required('Please also provide a billing address.') : schema.notRequired();"
								}
							}
						]
					],
					"customValidation": {
						"hidden": {
							"fields": [
								"credit_card"
							],
							"values": [
								""
							]
						}
					}
				}
			}
		},
		"end": {
			"isEnd": true,
			"title": "Default Title",
			"description": "Default Description.",
			"contentContainerStyle": {
				"display": "flex",
				"justifyContent": "space-between",
				"alignItems": "center",
				"flexGrow": 1
			},
			"actions": {
				"finish": {
					"type": "action",
					"action": "finish",
					"label": "Ok",
					"navigateTo": "home",
					"props": {
						"mode": "contained"
					}
				},
				"fillProfile": {
					"type": "action",
					"action": "redirect",
					"label": "Fill Profile",
					"navigateTo": "personal_info",
					"props": {
						"mode": "contained"
					}
				}
			}
		}
	}
}